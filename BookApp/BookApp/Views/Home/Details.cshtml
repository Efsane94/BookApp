@model Book
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoryMenu")
    </div>
    <div class="col-md-9">
        <div class="card mb-4">
            <div class="card-body">
                <div class="row no-gutter">
                    <div class="col-md-3">
                        <img src="~/img/@Model.ImageUrl" alt="@Model.Name" class="card-img" style="height:400px;" />
                    </div>
                    <div class="col-md-8">
                        <h5 class="card-title">
                            @Model.Name
                        </h5>
                        <h6>Muellif : @Model.AuthorName</h6>
                        <p>@Html.Raw(Model.Description)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

