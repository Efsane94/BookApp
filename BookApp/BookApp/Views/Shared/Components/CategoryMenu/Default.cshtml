@model IEnumerable<Category>

<div class="card">
    <article class="card-group-item">
        <header class="card-header"><h6 class="title">Kateqoriyalar</h6></header>
        <div class="filter-content">
            <div class="list-group list-group-flush">
                @foreach (var category in Model)
                {
                    <a asp-controller="Home" asp-action="Index" asp-route-id="@category.Id" class="list-group-item @(ViewBag.SelectedCategory==category.Id.ToString() ? "active" : "")">@category.Name</a>
                }
            </div>
        </div>
    </article> 
</div>
