@model IEnumerable<Book>

@foreach (var book in Model)
{
    <div class="col-md-4">

        <div class="card mb-3" style="width: 16rem">
            <a asp-controller="Home" asp-action="Details" asp-route-id="@book.Id">
                <img src="~/img/@book.ImageUrl"
                     class="card-img-top"
                     alt="@book.Name" style="height:250px;" />
                <div class="card-body">
                    <p class="card-text">@book.AuthorName</p>
                    <h6>@book.Name</h6>
                </div>
            </a>
           
        </div>
    </div>
        }
